@page "/gestao/modos-entrega"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Administrador,Funcionario")]
@using MyMedia.Domain.Entities
@inject MyMEDIA.GestaoLoja.Services.ModoEntregaBackofficeService Service

<h3>Modos de Entrega</h3>

@if (!string.IsNullOrWhiteSpace(Error))
{
    <div class="alert alert-danger">@Error</div>
}
@if (!string.IsNullOrWhiteSpace(Success))
{
    <div class="alert alert-success">@Success</div>
}

<div class="d-flex gap-2 mb-3">
    <button class="btn btn-primary" @onclick="AbrirCriar">Novo Modo</button>
    <button class="btn btn-outline-secondary" @onclick="Reload">Atualizar</button>
</div>

<table class="table table-striped table-sm align-middle">
    <thead>
        <tr>
            <th>#</th>
            <th>Nome</th>
            <th style="width:220px;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Items)
        {
            <tr>
                <td>@m.Id</td>
                <td>@m.Nome</td>
                <td>
                    <button class="btn btn-sm btn-outline-secondary me-1" @onclick="() => AbrirEditar(m)">Editar</button>
                    <button class="btn btn-sm btn-outline-danger" @onclick="() => AbrirApagar(m)">Apagar</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ShowEditModal)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal d-block" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@ModalTitle</h5>
                    <button type="button" class="btn-close" @onclick="FecharEdit"></button>
                </div>
                <div class="modal-body">
                    <label class="form-label">Nome</label>
                    <input class="form-control" @bind="NomeEdit" @bind:event="oninput" />
                </div>
                <div class="modal-footer">
                    <button class="btn btn-outline-secondary" @onclick="FecharEdit">Cancelar</button>
                    <button class="btn btn-primary" @onclick="GuardarEdit">Guardar</button>
                </div>
            </div>
        </div>
    </div>
}

@if (ShowDeleteModal && Selected is not null)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal d-block" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Apagar Modo de Entrega</h5>
                    <button type="button" class="btn-close" @onclick="FecharApagar"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-0">Apagar o modo <strong>@Selected.Nome</strong>?</p>
                    <div class="alert alert-warning mt-3 mb-0">
                        Só é possível apagar se não existirem produtos com este modo.
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-outline-secondary" @onclick="FecharApagar">Cancelar</button>
                    <button class="btn btn-danger" @onclick="ConfirmarApagar">Sim, apagar</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    List<ModoEntrega> Items = new();
    string? Error;
    string? Success;

    bool ShowEditModal;
    bool ShowDeleteModal;
    string ModalTitle = "Novo Modo";
    string NomeEdit = "";
    ModoEntrega? Selected;
    bool IsEdit;

    protected override async Task OnInitializedAsync()
        => await Reload();

    async Task Reload()
    {
        Error = null; Success = null;
        Items = await Service.ListAsync();
    }

    void AbrirCriar()
    {
        IsEdit = false;
        Selected = null;
        NomeEdit = "";
        ModalTitle = "Novo Modo de Entrega";
        ShowEditModal = true;
    }

    void AbrirEditar(ModoEntrega m)
    {
        IsEdit = true;
        Selected = m;
        NomeEdit = m.Nome;
        ModalTitle = $"Editar Modo #{m.Id}";
        ShowEditModal = true;
    }

    void FecharEdit() => ShowEditModal = false;

    async Task GuardarEdit()
    {
        try
        {
            Error = null; Success = null;

            if (IsEdit && Selected is not null)
            {
                await Service.UpdateAsync(Selected.Id, NomeEdit);
                Success = "Modo atualizado.";
            }
            else
            {
                await Service.AddAsync(NomeEdit);
                Success = "Modo criado.";
            }

            ShowEditModal = false;
            await Reload();
        }
        catch (Exception ex) { Error = ex.Message; }
    }

    void AbrirApagar(ModoEntrega m)
    {
        Selected = m;
        ShowDeleteModal = true;
    }

    void FecharApagar()
    {
        ShowDeleteModal = false;
        Selected = null;
    }

    async Task ConfirmarApagar()
    {
        try
        {
            if (Selected is null) return;
            await Service.DeleteAsync(Selected.Id);
            Success = "Modo apagado.";
            FecharApagar();
            await Reload();
        }
        catch (Exception ex) { Error = ex.Message; }
    }
}