@using RCLComum.Shared
@using RCLComum

<div class="top-bar">
    <img src="/images/logo.png" alt="MyMEDIA" class="logo" />
    <input type="search" class="search-box" placeholder="Pesquisar produtos..." />
    <div class="top-buttons">
        <button class="icon-btn" @onclick="GoCarrinho"><img src="/images/cart.png" alt="Carrinho" /></button>
        <button class="icon-btn" @onclick="GoFavoritos"><img src="/images/heart.png" alt="Favoritos" /></button>
        <button class="icon-btn" @onclick="GoLogin"><img src="/images/user.png" alt="Login" /></button>
    </div>
</div>

<!-- Friso deslizante de categorias – obrigatório §7 -->
<Categorias OnSelected="GoCategoria" />

<div class="nav-menu">
    <ul class="nav-list">
        <li><NavLink href="" Match="NavLinkMatch.All"> Início</NavLink></li>
        <li><NavLink href="produtos"> Produtos</NavLink></li>
        <li><NavLink href="categorias"> Categorias</NavLink></li>
        <li><NavLink href="carrinho"> Carrinho</NavLink></li>
        <li><NavLink href="favoritos"> Favoritos</NavLink></li>
        <li><NavLink href="encomendas"> Encomendas</NavLink></li>
    </ul>
</div>

@code {
    [Inject] private NavigationManager Nav { get; set; } = default!;

    private void GoCarrinho() => Nav.NavigateTo("/carrinho");
    private void GoFavoritos() => Nav.NavigateTo("/favoritos");
    private void GoLogin() => Nav.NavigateTo("/login");
    private void GoCategoria(int id) => Nav.NavigateTo($"/categoria/{id}");
}

<style>
    /* Top-bar igual ao esquema geral */
    .top-bar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: #0d6efd;
        color: white;
        padding: 0.5rem 1rem;
        position: sticky;
        top: 0;
        z-index: 1000;
    }
    .logo {
        height: 40px;
    }
    .search-box {
        flex: 1;
        max-width: 400px;
        margin: 0 1rem;
        padding: 0.4rem 0.8rem;
        border: none;
        border-radius: 20px;
    }
    .top-buttons {
        display: flex;
        gap: 0.5rem;
    }
    .icon-btn {
        background: none;
        border: none;
        color: white;
        font-size: 1.5rem;
        cursor: pointer;
    }
    .icon-btn img {
        height: 24px;
    }

    /* Friso deslizante – igual ao exemplo das fichas */
    .friso {
        display: flex;
        gap: 0.5rem;
        overflow-x: auto;
        padding: 0.5rem 1rem;
        background: #212529;
    }
    .friso-item {
        background: #0d6efd;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        white-space: nowrap;
        cursor: pointer;
    }

    /* Nav-menu igual ao esquema geral */
    .nav-menu {
        background: #212529;
        padding: 0.5rem 0;
    }
    .nav-list {
        list-style: none;
        display: flex;
        gap: 1rem;
        margin: 0;
        padding: 0 1rem;
    }
    .nav-list a {
        color: white;
        text-decoration: none;
        padding: 0.5rem 0.75rem;
        border-radius: 4px;
    }
    .nav-list a.active {
        background: #0d6efd;
    }
</style>