@page "/login"

@using RCLAPI.DTOs
@using RCLAPI.Services
@inject ApiService Api
@inject TokenService TokenService
@inject NavigationManager Nav

<div class="text-center mb-4">
    <img src="/images/logo.png" alt="MyMEDIA" style="height:60px;" />
    <h3>Login</h3>
</div>

<EditForm Model="@model" OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Email</label>
        <InputText @bind-Value="model.Email" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <InputText type="password" @bind-Value="model.Password" class="form-control" />
    </div>

    @if (!string.IsNullOrWhiteSpace(error))
    {
        <div class="alert alert-danger">@error</div>
    }

    <button type="submit" class="btn btn-primary" disabled="@isBusy">
        @(isBusy ? "A entrar..." : "Entrar")
    </button>
</EditForm>

@code {
    private LoginDTO model = new();
    private string? error;
    private bool isBusy;

    private async Task HandleLogin()
    {
        error = null;
        isBusy = true;

        try
        {
            var rsp = await Api.LoginAsync(model);

            var body = await rsp.Content.ReadAsStringAsync();
            if (!rsp.IsSuccessStatusCode)
            {
                var msg = await rsp.Content.ReadAsStringAsync();
                error = string.IsNullOrWhiteSpace(msg)
                    ? "Login inválido."
                    : msg;
                return;
            }
            if (!rsp.IsSuccessStatusCode)
            {
                var msg = await rsp.Content.ReadAsStringAsync();
                error = string.IsNullOrWhiteSpace(msg) ? "Não foi possível efetuar login." : msg;
                return;
            }
            if (!rsp.IsSuccessStatusCode)
            {
                error = $"Login inválido. HTTP {(int)rsp.StatusCode}. Body: {body}";
                return;
            }

            if (string.IsNullOrWhiteSpace(body))
            {
                error = "A API respondeu 200 mas o body veio vazio (não veio JSON).";
                return;
            }

            AuthResponseDto? auth = null;
            try
            {
                auth = System.Text.Json.JsonSerializer.Deserialize<AuthResponseDto>(
                    body,
                    new System.Text.Json.JsonSerializerOptions { PropertyNameCaseInsensitive = true });
            }
            catch (Exception ex)
            {
                error = $"Body não é JSON válido. Body: {body}. Erro: {ex.Message}";
                return;
            }

            if (auth is null || string.IsNullOrWhiteSpace(auth.Token))
            {
                error = $"JSON recebido mas sem token. Body: {body}";
                return;
            }

            await TokenService.SetTokenAsync(auth.Token);
            Nav.NavigateTo("/");
        }
        catch (Exception ex)
        {
            error = ex.ToString();
        }
        finally
        {
            isBusy = false;
        }
    }
}