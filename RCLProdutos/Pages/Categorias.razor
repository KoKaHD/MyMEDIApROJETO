@inject ApiService Api

<h4>Categorias</h4>

@if (categorias == null)
{
    <p>Loading...</p>
}
else
{
    <div class="friso">
        @foreach (var cat in categorias)
        {
            <div class="friso-item" @onclick="() => Selected(cat)">
                @cat.Nome
            </div>
        }
    </div>
}

@code {
    private List<CategoriaDTO>? categorias;

    protected override async Task OnInitializedAsync() =>
        categorias = await Api.GetCategoriasAsync();

    [Parameter] public EventCallback<int> OnSelected { get; set; }

    private async Task Selected(CategoriaDTO c) =>
        await OnSelected.InvokeAsync(c.Id);
}

<style>
    .friso {
        display: flex;
        gap: 0.5rem;
        overflow-x: auto;
        padding-bottom: 0.5rem;
    }

    .friso-item {
        background: var(--cor-prim);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        white-space: nowrap;
        cursor: pointer;
    }
</style>