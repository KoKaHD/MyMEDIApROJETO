@page "/produto/{Id:int}"
@inject ApiService Api
@inject TokenService TokenSvc
@inject NavigationManager Nav

@if (prod == null)
{
    <p>A carregar...</p>
}
else
{
    <div class="produto-detalhe">
        <div class="produto-detalhe-img">
            <img src="@prod.UrlImagem" alt="@prod.Nome" />
        </div>

        <div class="produto-detalhe-body">
            <h3>@prod.Nome</h3>
            <p>@prod.Detalhe</p>
            <div class="produto-detalhe-preco">€ @prod.Preco.ToString("0.00")</div>

            <div class="produto-detalhe-actions">
                <button class="btn btn-primary" @onclick="AddCarrinho">
                    Adicionar ao Carrinho
                </button>
                <button class="btn btn-outline-danger" @onclick="AddFavorito">
                    Favorito
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int Id { get; set; }
    private ProdutoDTO? prod;

    protected override async Task OnInitializedAsync()
        => prod = await Api.GetProdutoAsync(Id);

    private async Task AddCarrinho()
    {
        var userId = await TokenSvc.GetUserIdAsync();
        if (string.IsNullOrWhiteSpace(userId))
        {
            Nav.NavigateTo("/login");
            return;
        }

        await Api.AddCarrinhoAsync(new CarrinhoDTO
        {
            ClienteId = userId,
            ProdutoId = prod!.Id,
            Quantidade = 1
        });

        Nav.NavigateTo("/carrinho");
    }

    private async Task AddFavorito()
    {
        var userId = await TokenSvc.GetUserIdAsync();
        if (string.IsNullOrWhiteSpace(userId))
        {
            Nav.NavigateTo("/login");
            return;
        }

        await Api.AddFavoritoAsync(new FavoritoDTO
        {
            ClienteId = userId,
            ProdutoId = prod!.Id
        });
    }
}